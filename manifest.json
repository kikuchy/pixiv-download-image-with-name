{
	"manifest_version": 2,
	"version": "0.3",
	"name": "pixiv-download-image-with-name",
	"description": "pixivの画像を、良い感じに名前を付けてダウンロードできるようにします。",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
	"content_scripts": [{
		"run_at": "document_start",
		"js": ["includes/main.js"],
		"matches": [
			"http://www.pixiv.net/member_illust.php?*"
		]
	}]
}
